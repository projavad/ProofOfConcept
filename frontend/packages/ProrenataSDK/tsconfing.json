{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "esnext",
        "es2015"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "outDir": "./lib"
    },
    "include": [
      "./src"
    ]
  }